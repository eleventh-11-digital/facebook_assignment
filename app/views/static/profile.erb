<h1><%=@uu%></h1>

<div>
	<% Current_user.id.all.each do |s| %>
		<a href="/status<%=s.id%>"><%= s.id.status %></a>

		<form method=post action='/likes/<%= s.id %>' value="Likes">
			<button type="submit">Likes
				<span><%= s.likes.where(likes: 1).count %></span>
			</button>
		</form>

		<form method=post action='/delete/<%=s.id%>' value="Delete">
			<button type="submit">Delete</button>
			<span><%= @dltmsg %></span>
		</form>

		<form action="/update/<%=s.id%>" method="post">
				<input type="text" placeholder="Change your comment here!" name="status">	
				<input type="submit" value="Update">
		</form>
<%end%>